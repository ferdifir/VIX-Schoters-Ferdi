<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="143dp"
    android:background="#DDDDDD"
    android:layout_margin="8dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/tv_list_url"
        android:layout_width="match_parent"
        android:layout_height="15sp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="#7F000000"
        android:scaleType="centerCrop"
        app:riv_corner_radius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/tv_list_title"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="#7F000000"
        android:scaleType="centerCrop"
        app:riv_corner_radius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_list_url" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/tv_list_title2"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="200dp"
        android:src="#7F000000"
        android:scaleType="centerCrop"
        app:riv_corner_radius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_list_title" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/tv_list_desc"
        android:layout_width="match_parent"
        android:layout_height="15sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="#7F000000"
        android:scaleType="centerCrop"
        app:riv_corner_radius="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_list_title2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/tv_list_desc2"
        android:layout_width="match_parent"
        android:layout_height="15sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="#7F000000"
        android:scaleType="centerCrop"
        app:riv_corner_radius="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_list_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/tv_list_desc3"
        android:layout_width="match_parent"
        android:layout_height="15sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="300dp"
        android:src="#7F000000"
        android:scaleType="centerCrop"
        app:riv_corner_radius="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_list_desc2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>